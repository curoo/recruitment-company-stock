{
  "name": "company-stock",
  "private": true,
  "workspaces": [
    "packages/www",
    "packages/api"
  ],
  "scripts": {
    "prepare": "./scripts/system-check.sh",
    "start:www": "npm run start --workspace www",
    "start:api": "npm run start --workspace api",
    "start": "npm-run-all --parallel start:*",
    "test": "npm run test --workspaces --if-present",
    "test:www": "npm run test --workspace www",
    "test:api": "npm run test:watch --workspace api"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
