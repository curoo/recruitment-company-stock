root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 200

[*.py]
indent_style = space
trim_trailing_whitespace = true
indent_size = 4
end_of_line = LF

[{*.json,Makefile}]
indent_style = tab
max_line_length = off
